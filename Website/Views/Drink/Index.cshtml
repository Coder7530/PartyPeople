@model DrinkListViewModel
@{
    ViewData["Title"] = "Drinks";
}
<div class="d-flex align-items-center p-2">
    <h4 class="me-auto mb-0">Drinks</h4>
    <a class="btn btn-primary btn-sm m-1" role="button" asp-controller="Drink" asp-action="Create">Add New</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col" class="col-sm-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var drink in Model.Drinks)
            {
                <tr>
                    <td>@drink.Name</td>
                    <td>@drink.Description</td>
                    <td class="text-end py-1">
                        <a class="btn btn-outline-primary btn-sm" role="button" asp-controller="Drink" asp-action="Details" asp-route-id="@drink.Id">View</a>
                    </td>
                </tr>
            }
            @if (!Model.Drinks.Any())
            {
                <tr>
                    <td colspan="3">No drinks available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>